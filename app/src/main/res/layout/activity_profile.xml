<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".ProfileActivity">

        <TextView
                android:text="@string/profile_button"
                android:layout_width="410dp"
                android:layout_height="46dp"
                android:id="@+id/activityTextView" android:textColor="@color/color6"
                android:background="@color/color1"
                android:paddingStart="55dp"
                android:paddingEnd="20dp"
                android:paddingVertical="3dp"
                android:textSize="30sp" android:textStyle="bold"
                android:fontFamily="@font/alfa_slab_one" android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:singleLine="false"/>

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@drawable/left_arrow"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/backBtn" android:layout_marginTop="14dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/activityTextView" android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="0.0" android:contentDescription="@string/todo"/>

        <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="296dp"
                android:layout_height="47dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="@string/user_name"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileImageView" />

        <TextView
                android:text="@string/name_input_hint"
                android:layout_width="120dp"
                android:layout_height="34dp"
                android:id="@+id/firstNameTextView" android:textSize="18sp"
                android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.07"/>
        <TextView
                android:text="@string/email_input_hint"
                android:layout_width="226dp"
                android:layout_height="36dp"
                android:id="@+id/emailTextView" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.132" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lastNameTextView"/>
        <TextView
                android:text="@string/lastname_input_hint"
                android:layout_width="120dp"
                android:layout_height="34dp"
                android:id="@+id/lastNameTextView" android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/firstNameTextView"
                app:layout_constraintHorizontal_bias="0.07"/>
        <TextView
                android:text="@string/city_input_hint"
                android:layout_width="120dp"
                android:layout_height="34dp"
                android:id="@+id/cityTextView" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailTextView"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.07"/>
        <Button
                android:text="@string/video_production_btn"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/videoProductionBtn"
                style="@android:style/Widget.Button" android:textSize="16sp" android:background="@drawable/style4"
                android:drawableTop="@drawable/film_camera"
                android:paddingTop="35dp"
                android:paddingBottom="30dp"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent" android:textColor="#F5000000" android:layout_marginEnd="60dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/singerBtn"
                app:layout_constraintStart_toEndOf="@+id/rapperBtn" android:layout_marginStart="8dp"/>
        <Button
                android:text="@string/rapper_btn"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/rapperBtn"
                style="@android:style/Widget.Button" android:textSize="16sp" android:background="@drawable/style4"
                android:drawableTop="@drawable/studio"
                android:paddingTop="35dp"
                android:paddingBottom="30dp"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/musicProductionBtn"
                app:layout_constraintEnd_toStartOf="@+id/videoProductionBtn" android:layout_marginEnd="8dp"/>
        <Button
                android:text="@string/clothing_design_btn"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/clothingDesignBtn"
                style="@android:style/Widget.Button" android:textSize="16sp" android:background="@drawable/style4"
                android:drawableTop="@drawable/clothing_designer"
                android:paddingTop="35dp"
                android:paddingBottom="30dp"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/videoProductionBtn"
                app:layout_constraintStart_toEndOf="@+id/graphicDesignerBtn" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        <Button
                android:text="@string/music_production_btn"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/musicProductionBtn"
                style="@android:style/Widget.Button" android:textSize="16sp" android:background="@drawable/style4"
                android:drawableTop="@drawable/music_production"
                android:paddingTop="35dp"
                android:paddingBottom="30dp"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="60dp" app:layout_constraintEnd_toStartOf="@+id/singerBtn"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/skillsTextView"/>
        <Button
                android:text="@string/singer_btn"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/singerBtn"
                style="@android:style/Widget.Button" android:textSize="16sp" android:background="@drawable/style4"
                android:drawableTop="@drawable/microphone"
                android:paddingTop="35dp"
                android:paddingBottom="30dp"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toEndOf="@+id/musicProductionBtn" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/skillsTextView"/>
        <Button
                android:text="@string/graphic_designer_btn"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/graphicDesignerBtn"
                style="@android:style/Widget.Button" android:textSize="16sp" android:background="@drawable/style4"
                android:drawableTop="@drawable/design"
                android:paddingTop="35dp"
                android:paddingBottom="30dp"
                android:fontFamily="@font/alfa_slab_one"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/rapperBtn"
                app:layout_constraintEnd_toStartOf="@+id/clothingDesignBtn" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        <TextView
                android:text="@string/skills"
                android:layout_width="410dp"
                android:layout_height="25dp"
                android:id="@+id/skillsTextView"
                android:background="@drawable/style9"
                android:drawableStart="@drawable/down_arrow"
                android:drawableEnd="@drawable/down_arrow"
                android:paddingStart="25dp"
                android:paddingEnd="15dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="54dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp"
                android:fontFamily="@font/alfa_slab_one"
                app:layout_constraintTop_toBottomOf="@+id/selectCityBtn" android:layout_marginTop="24dp"/>
        <Button
                android:text="@string/change_city_btn"
                android:layout_width="188dp"
                android:layout_height="36dp"
                android:id="@+id/selectCityBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp" app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cityTextView"/>

        <Button
                android:id="@+id/savePhotoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="11dp"
                android:text="@string/add_photo_btn"
                app:layout_constraintEnd_toStartOf="@+id/profileImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activityTextView" />

        <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activityTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
