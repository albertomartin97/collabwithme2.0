<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">

    <TextView
            android:text="@string/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registrationLinkTextView" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:textSize="36sp" android:fontFamily="@font/alfa_slab_one"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.372" android:gravity="center"
            android:layout_marginBottom="96dp" app:layout_constraintBottom_toTopOf="@+id/nameInput"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordInput"
            android:hint="@string/password_input_hint"
            android:textSize="24sp" android:autofillHints=""
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            app:layout_constraintStart_toEndOf="@+id/passwordImage" android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/emailInput"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailInput"
            android:hint="@string/email_input_hint" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            app:layout_constraintStart_toEndOf="@+id/emailImage" android:layout_marginStart="8dp"
            android:autofillHints="" app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="146dp"
            app:layout_constraintTop_toBottomOf="@+id/registrationLinkTextView"/>

    <ImageView
            android:layout_width="26dp"
            android:layout_height="27dp" app:srcCompat="@drawable/email_icon"
            android:id="@+id/emailImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:contentDescription="@string/todo"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="263dp"
            app:layout_constraintEnd_toStartOf="@+id/emailInput" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="28dp" app:srcCompat="@drawable/password_icon"
            android:id="@+id/passwordImage"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/emailImage"
            app:layout_constraintEnd_toStartOf="@+id/passwordInput" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginBottom="66dp" app:layout_constraintBottom_toTopOf="@+id/loginBtn"
            app:layout_constraintVertical_bias="0.248" android:contentDescription="@string/todo"/>
    <Button
            android:text="@string/login_button"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:id="@+id/loginBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            style="@android:style/Widget.Button" android:textSize="18sp" android:background="@drawable/style1"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="191dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput"/>

</androidx.constraintlayout.widget.ConstraintLayout>