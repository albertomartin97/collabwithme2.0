<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">

    <TextView
            android:text="@string/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginTextView" android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textSize="36sp" android:fontFamily="@font/alfa_slab_one"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
    />

    <EditText
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordInput"
            android:drawableEnd="@drawable/key"
            android:hint="@string/password_input_hint"
            android:textSize="24sp" android:autofillHints=""
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/emailInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp" app:layout_constraintHorizontal_bias="0.6"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:drawableEnd="@drawable/email"
            android:id="@+id/emailInput"
            android:hint="@string/email_input_hint" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            android:autofillHints="" android:layout_marginTop="82dp"
            app:layout_constraintTop_toBottomOf="@+id/loginTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp" app:layout_constraintHorizontal_bias="0.6"/>

    <Button
            android:text="@string/login_button"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/loginBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            style="@android:style/Widget.Button" android:textSize="18sp" android:background="@drawable/style1"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput"
    />
    <Button
            android:text="@string/private_access_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/privateAccessButton" android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="167dp" android:layout_marginBottom="99dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>