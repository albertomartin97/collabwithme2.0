<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeScreenActivity">

    <Button
            android:text="@string/profile_button"
            android:layout_width="186dp"
            android:layout_height="125dp"
            android:id="@+id/profileBtn"
            style="@android:style/Widget.Button" android:textSize="18sp" android:background="@drawable/style2"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintEnd_toStartOf="@+id/friendsBtn"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/appTextView"/>
    <Button
            android:text="@string/friends_button"
            android:layout_width="136dp"
            android:layout_height="127dp"
            android:id="@+id/friendsBtn"
            style="@android:style/Widget.Button" android:textSize="18sp" android:background="@drawable/style3"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="45dp"
            app:layout_constraintStart_toEndOf="@+id/profileBtn" android:layout_marginStart="16dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/appTextView"/>

    <Button
            android:text="@string/find_people_button"
            android:layout_width="337dp"
            android:layout_height="126dp"
            android:id="@+id/findPeopleBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            style="@android:style/Widget.Button" android:textSize="18sp" android:background="@drawable/style4"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="45dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/profileBtn"/>

    <Button
            android:text="@string/messages_button"
            android:layout_width="337dp"
            android:layout_height="126dp"
            android:id="@+id/messagesBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            style="@android:style/Widget.Button" android:textSize="18sp" android:background="@drawable/style5"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="45dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/findPeopleBtn"/>
    <TextView
            android:text="@string/app_textView2"
            android:layout_width="417dp"
            android:layout_height="47dp"
            android:id="@+id/appTextView" android:textColor="@color/color6"
            android:background="@color/color2"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingVertical="3dp"
            android:textSize="30sp" android:textStyle="bold"
            android:fontFamily="@font/alfa_slab_one" android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:singleLine="false"/>




</androidx.constraintlayout.widget.ConstraintLayout>